---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  image?: {
    src: ImageMetadata;
    alt: string;
    link?: string;
  };
  slug?: string;
  bodyClass?: string;
}

const { title, ...props } = Astro.props;
---

<html lang="en" class="dark:bg-stone-950 bg-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="Benoît Jeaurond's blog" />
    <meta name="author" content="Benoît Jeaurond" />
    <link rel="icon" href="/images/favicon.png" />
    <ViewTransitions />
  </head>
  <body class={"px-4 py-8 lg:px-8 min-h-screen flex transition-colors " + props.bodyClass ?? ""}>
    <main
      class="container prose prose-stone mx-auto dark:prose-invert prose-img:rounded-md flex-1 flex flex-col"
    >
      <nav class="flex justify-between gap-x-8 gap-y-2 flex-wrap mb-8 w-full text-sm sm:text-base">
        <div class="flex gap-2">
          <a class="opacity-60" href="/">blog.jeaurond.dev</a>
          {"slug" in props ? "/ " + props.slug : ""}
        </div>
        <a
          href="https://github.com/BenJeau/blog"
          rel="noopener noreferrer"
          target="_blank"
          class="flex gap-2 items-center"
        >
          <svg
            role="img"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            style="height: 16px; width: 16px;"
          >
            <path
              d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
            >
            </path>
          </svg>
          @BenJeau/blog
        </a>
      </nav>
      {
        props.image && (
          <a
            href={props.image.link ?? ""}
            rel="noopener noreferrer"
            target="_blank"
            class="mb-8 hidden sm:block"
          >
            <Image src={props.image.src} alt={props.image.alt} 
            class="my-0" />
          </a>
        )
      }
      <h1 transition:name={`title-${props.slug}`}>
        {title}
      </h1>
      <article class="flex-1">
        <slot />
      </article>
      <footer
        class="mt-8 text-center italic opacity-60 text-sm"
        transition:name="footer"
      >
        Made with &lt3 by <a
          href="https://github.com/BenJeau"
          rel="noopener noreferrer"
          target="_blank">BenJeau</a
        >
      </footer>
    </main>
  </body>
</html>
